<div class="page-header">
  <h1>
    Reviews
    <a href="/reviews/new" class="btn btn-lg btn-success">New Review</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Sender</th>
        <th>Recipient</th>
        <th>Actions</th>
      </tr>

      <% @reviews.each do |review| %>
      <tr>
        <td>
          <% if review.sender.present? %>
            <a href="/users/<%= review.sender.id %>">
              <%= review.sender.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if review.trip.present? %>
            <a href="/kwest_trips/<%= review.trip.id %>">
              <%= review.trip.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/reviews/<%= review.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == review.sender %>
            <a href="/reviews/<%= review.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_review/<%= review.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @reviews, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
