<!-- Validation failure messages -->
<% if @kwest_trip.errors.any? %>
  <% @kwest_trip.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Kwest Trip #<%= @kwest_trip.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_kwest_trip/<%= @kwest_trip.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <textarea id="name" name="name" placeholder="Name" class="form-control" rows="3"><%= @kwest_trip.name %></textarea>
      </div>

      <!-- Label and input for start_date -->
      <div class="form-group">
        <label for="start_date" class="control-label">
          Start date
        </label>

        <input type="text" id="start_date" name="start_date" placeholder="Start date" class="form-control" value="<%= @kwest_trip.start_date %>">
      </div>

      <!-- Label and input for end_date -->
      <div class="form-group">
        <label for="end_date" class="control-label">
          End date
        </label>

        <input type="text" id="end_date" name="end_date" placeholder="End date" class="form-control" value="<%= @kwest_trip.end_date %>">
      </div>

      <!-- Label and input for enrollment_id -->
      <div class="form-group">
        <label for="enrollment_id" class="control-label">
          Enrollment
        </label>

        <input type="text" id="enrollment_id" name="enrollment_id" placeholder="Enrollment" class="form-control" value="<%= @kwest_trip.enrollment_id %>">
      </div>

      <button class="btn btn-warning">
        Update Kwest Trip
      </button>
      or
      <a href="/kwest_trips/<%= @kwest_trip.id %>">Cancel</a>
    </form>
  </div>
</div>
